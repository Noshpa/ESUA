extends ../views/_default

//- mixins
include ../components/meta/meta
include ../components/sidebar/sidebar
include ../components/block-images/block-images
include ../components/block-items/block-items
include ../components/block-items/block-item-small
include ../components/block-images-text/block-images-text
include ../components/block-text/block-text
include ../components/block-thumbnail/block-thumbnail
include ../components/title/title
include ../components/block-warning/block-warning
include ../components/list-big-number/list-big-number
include ../components/form/form
include ../components/slick/slick
include ../components/header/header
include ../components/footer/footer

block var
    -
        var fonts = [
        'https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900&subset=latin,cyrillic',
        'https://educationusarussia.org/wp-content/themes/lincoln-unnell/web/css/main.css?ver=1563100455',
        'https://educationusarussia.org/wp-content/themes/lincoln-unnell/web/css/media.css?ver=1561585544',
        'https://educationusarussia.org/wp-content/themes/lincoln-unnell/web/css/fonts.css?ver=1539194555'
        ];

        var css = [
        '../css/extended.css',
        '../css/style.css',
        '../css/markup.css',
        'https://cdnjs.cloudflare.com/ajax/libs/jquery.perfect-scrollbar/1.4.0/css/perfect-scrollbar.min.css'
        ];

        var js = [
            'https://code.jquery.com/jquery-3.4.1.min.js',
            'https://cdnjs.cloudflare.com/ajax/libs/sticky-kit/1.1.3/sticky-kit.min.js',
            'https://cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/jquery.validate.min.js',
            'https://cdnjs.cloudflare.com/ajax/libs/inputmask/4.0.8/inputmask/inputmask.min.js',
            'https://cdnjs.cloudflare.com/ajax/libs/inputmask/4.0.8/inputmask/jquery.inputmask.min.js',
            'https://cdnjs.cloudflare.com/ajax/libs/jquery.perfect-scrollbar/1.4.0/perfect-scrollbar.min.js'
        ];

block head
    +meta('', '', css, js, fonts)

block body
    block header
        header
            +header()

    block main
        main.main.gsa
            .container.js-parent-sticky
                .col-left.js-sticky
                    -
                        var arrayText = [
                        {
                        className: 'is-active',
                        text: 'Что такое\n'+
                        '«Graduate Students Advising Program»?',
                        id: '#id_0'
                        },
                        {
                        className: '',
                        text: 'Что вас ждет?',
                        id: '#id_0'
                        },
                        {
                        className: '',
                        text: 'Для кого она предназначена?',
                        id: '#id_1'
                        },
                        {
                        className: '',
                        text: 'Сколько требуется времени на прохождение?',
                        id: '#id_2'
                        },
                        {
                        className: '',
                        text: 'Что я получу после окончания «Graduate Students Advising Program»?',
                        id: '#id_3'
                        },
                        {
                        className: '',
                        text: 'Каковы преимущества и дополнительные возможноститой программы?',
                        id: '#id_4'
                        },
                        {
                        className: '',
                        text: 'Отзывы',
                        id: '#id_5'
                        },
                        {
                        className: '',
                        text: 'Хочу пройти GSAP. Как это сделать? ',
                        id: '#id_6'
                        },
                        ]
                    +sidebar(arrayText)
                .col-right
                    .content
                        -
                            var arrayTitle = [
                            {
                            img: "./images/gsa/gsa.png",
                            title: "Graduate <br/> Students <br/> Advising",
                            text: "Program"
                            }
                            ]
                        +title(arrayTitle)
                        .text.text--margin
                            | Graduate Students Advising Program (GSAp) — это интенсивная
                            | программа групповых занятий (длительность каждого цикла —
                            | от 4 до 6 месяцев), которая подготовит вас к поступлению
                            | в магистратуру или аспирантуру США;  даст необходимые знания
                            | и навыки, поможет обменяться опытом c теми, кто уже прошел
                            | обучение в американских вузах.

                        .block-images--margin
                            +block-images("./images/gsa/images-1.png", "#f4f4f2")


                        .block-warning--margin#id_0
                            -
                                var arrayWarningText = [
                                {
                                img: "./images/college/icon-8.png",
                                text: "Если вы отвечаете требованиям Opportunity Funds Program и хотите присоединиться к конкурсному отбору, то активное " +
                                "участие на протяжении не менее 9 месяцев в GSAp является " +
                                "обязательным. При подаче документов в вузы США осенью 2020, " +
                                "вам необходимо стать участником GSAp в октябре 2019."
                                }
                                ]
                            +block-warning(arrayWarningText)

                        .block-items--margin2.js-block-scroll
                            -
                                var arrayItems = [
                                {
                                images: "./images/gsa/icon-1.png",
                                textTitle: "В течение всего цикла ",
                                text: "информационные лекции: «Как выбрать университет», «Финансирование образования», «Аппликационный пакет документов»"
                                },
                                {
                                images: "./images/gsa/icon-2.png",
                                textTitle: "1 этап (октябрь или февраль):",
                                text: "мотивационные лекции от ведущих спикеров; лекция о тонкостях американского образования уровня Graduate, которая позволит понять, на какую программу Вы можете претендовать; начало курса самостоятельной подготовки к TOEFL и GRE с профессиональными преподавателями"
                                },
                                {
                                images: "./images/gsa/icon-3.png",
                                textTitle: "2 этап (ноябрь или март):",
                                text: "продолжение  онлайн-сессии по подготовке к TOEFL и GRE,  начало онлайн курса по написанию мотивационного письма" +
                                "с носителями языка (SOP в направлениях STEM и Social Science)" +
                                "и лекция по Academic integrity."
                                },
                                {
                                images: "./images/gsa/icon-4.png",
                                textTitle: "3 этап (декабрь или апрель):",
                                text: "окончание  онлайн-сессии по подготовке к TOEFL и GRE, окончание  онлайн курса по написанию мотивационного письма" +
                                "с носителями языка (SOP в направлениях STEM и Social Science)"
                                },
                                {
                                images: "./images/gsa/icon-5.png",
                                textTitle: "4 этап (январь или май/сентябрь):",
                                text: "перед подачей документов в вузы вам будет интересны наши уникальные авторские курсы по Personal branding, лекции" +
                                "по Public speaking и помощь профессиональных экспертов" +
                                "в составлении резюме"
                                },
                                {
                                images: "./images/gsa/icon-6.png",
                                textTitle: "Параллельно с циклом  GSA (май-июль) проходит",
                                text: "серия семинаров по подготовке к отъезду в США (Pre-departure orientation) для тех, кто уже зачислен в университеты США." +
                                "В рамках этого шага студенты поделятся своим опытом поступления и обучения в вузах."
                                }
                                ]
                            +block-items(arrayItems)

                        .block-images-text--margin#id_1
                            -
                                var arrayBlock = [
                                {
                                img: "./images/gsa/images-2.png",
                                text: "Для выпускников российских вузов, которые планируют продолжить своеобучение в магистратуре / аспирантуре США. <br/><br/> Для специалистов, которые хотят профессионального и карьерного роста."
                                }
                                ]
                            +block-images-text(arrayBlock)

                        .block-text--margin#id_2
                            +block-text('Программа GSA состоит из двух циклов. Вы можете начать с 15 октября или присоединиться в феврале. <br/><br/>' +
                            '1-й цикл (интенсивный, 5 месяцев) - с октября по февраль <br/>' +
                            '2-й цикл (7 месяцев) - с февраля по сентябрь с перерывом на летние месяцы')

                        .block-images-text--margin#id_3
                            -
                                var arrayBlock = [
                                {
                                img: "./images/gsa/images-3.png",
                                text: "После окончания GSAp вы получите именной Диплом о прохождении программы"
                                }
                                ]
                            +block-images-text(arrayBlock)

                        .block-items--margin2.js-block-scroll#id_4
                            -
                                var arrayItems = [
                                {
                                images: "./images/gsa/icon-7.png",
                                text: "программа поможет подготовить сильную заявку на поступление в магистратуру / аспирантуру США благодаря приобретению и отработке навыков во время дополнительных онлайн занятий в групповом формате с практиками в области высшего образования США, американскими интернами и приглашенными экспертами"
                                },
                                {
                                images: "./images/gsa/icon-8.png",
                                text: "программа дает опыт индивидуальной и групповой динамики, ответственности за результат, соблюдение временных рамок выполнения заданий и посещений;"
                                },
                                {
                                images: "./images/gsa/icon-9.png",
                                text: "программа дает возможность участия в волонтерских проектах EducationUSA Russia"
                                },
                                {
                                images: "./images/gsa/icon-10.png",
                                text: "вы сможете посещать закрытые группы подготовки к экзаменам TOEFL, GRE "
                                },
                                {
                                images: "./images/gsa/icon-11.png",
                                text: "занятия по выработке навыков публичных выступлений \n"+
                                "и иных soft skills"
                                },
                                {
                                images: "./images/gsa/icon-12.png",
                                text: "любые другие программы и инициативы EducationUSA Russia"
                                }
                                ]
                            +block-items(arrayItems)


                        .block-list--margin#id_6
                           .gsa-info
                               -
                                   var arrayItems = [
                                   {
                                   images: "./images/gsa/icon-14.png",
                                   text: "Чтобы стать участником GSAp необходимо заранее пройти \n"+
                                   "программу 120 Credits Graduate с результатом не менее 70%"
                                   },
                                   {
                                   images: "./images/gsa/icon-15.png",
                                   text: "Начать индивидуальные консультации с экспертом \n"+
                                   "EducationUSA Russia"
                                   },
                                   {
                                   images: "./images/gsa/icon-16.png",
                                   text: "Заполнить заявку, которая вам будет выслана, когда начнется \n"+
                                   "набор в программу. "
                                   }
                                   ]
                               +block-items(arrayItems)

                               -
                                   var arrayWarningText = [
                                   {
                                   img: "./images/college/icon-8.png",
                                   text: "Набор в GSAp осуществляется в октябре и феврале ежегодно.Следите за расписанием наших мероприятий в Афише." +
                                   "Анонс программы по городам в центрах или online идет" +
                                   "с аббревиатурой: GSAp (описание)"
                                   }
                                   ]
                               +block-warning(arrayWarningText)

                        +form()

                        .question-program.t-a-c
                            | Если у вас есть вопросы по программе,<br> напишите на <a class="link-red" href="mail:adviser@educationusarussia.org">adviser@educationusarussia.org</a>

    block footer
        footer
            +footer()